<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/linearOtherProfile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenBackground">

        <include
            layout="@layout/frag_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/spinner_otherProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyle" />

                <ScrollView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/layout_otherProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout_otherProfile">

                        <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/activity_other_profileImage"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:layout_gravity="center_horizontal"
                        app:border_color="#323944"
                        app:border_width="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_20sdp" />
                    </FrameLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/username_otherProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:paddingRight="@dimen/_12sdp"
                        android:paddingLeft="0dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_flight_land_black_24dp"
                        android:id="@+id/imgNotTravel"
                        android:contentDescription="@string/statusNotTravel"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtNotTravel"
                        android:text="@string/statusNotTravel"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/imgTravel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_flight_takeoff_blue_24dp"
                        android:contentDescription="@string/statusTravel"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtTravel"
                        android:text="@string/statusTravel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearlayout3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:contentDescription="@string/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location_on_white_24dp" />

                        <TextView
                            android:id="@+id/activity_other_tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearlayout4"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/greenLighter"
                        android:layout_marginBottom="90dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        style="@style/PaddingPage"
                        android:paddingBottom="@dimen/_25sdp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/details"
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/detail1_otherProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text" />

                    <TextView
                        android:id="@+id/activity_other_noDetails"
                        android:text="@string/detailOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_user_profile"
                        android:padding="@dimen/_20sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/sixThings"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/detail2_otherProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text" />

                    <TextView
                        android:id="@+id/activity_other_noSix"
                        android:text="@string/detailTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_user_profile"
                        android:padding="@dimen/_20sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/personality"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/detail3_otherProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text" />

                    <TextView
                        android:id="@+id/activity_other_noPersonality"
                        android:text="@string/detailThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_user_profile"
                        android:padding="@dimen/_20sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/idealDay"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/detail4_otherProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:layout_marginBottom="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/activity_other_noIdeal"
                        android:text="@string/detailFour"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_user_profile"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_20sdp"
                        android:paddingTop="@dimen/_20sdp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:layout_alignParentBottom="true">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/activity_other_user_bFloatingButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/ic_chat_bubble_outline_white_24dp"
                        android:visibility="visible"
                        app:backgroundTint="@color/green"
                        app:fabSize="normal" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/activity_other_user_bFloatingMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/ic_map_float"
                        android:visibility="visible"
                        app:backgroundTint="@color/green"
                        app:fabSize="normal" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/activity_other_user_bFloatingBucket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/ic_assignment_white_24dp"
                        android:visibility="visible"
                        app:backgroundTint="@color/green"
                        app:fabSize="normal" />
                </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>