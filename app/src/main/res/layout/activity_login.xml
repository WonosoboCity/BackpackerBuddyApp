<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:float="http://schemas.android.com/tools"
        android:id="@+id/linearLayoutSignUp"
        android:weightSum="5">

        <include android:id="@+id/toolbar_main"
            layout="@layout/frag_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/_70sdp"
            android:paddingRight="@dimen/_70sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greenBackground"
            android:layout_gravity="center_vertical">

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletPadding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp">

                <EditText
                    android:id="@+id/etLoggedInUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:hint="@string/username"
                    android:textSize="@dimen/_13ssp"
                    android:paddingBottom="@dimen/_10sdp" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                float:fletPadding="@dimen/_10sdp">
                <EditText
                    android:id="@+id/etLoggedInPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:textSize="@dimen/_13sdp"
                    android:hint="@string/password"
                    android:paddingBottom="@dimen/_10sdp" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>