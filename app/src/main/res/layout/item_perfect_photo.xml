<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lowWhite"
    android:id="@+id/item_perfect">

    <RelativeLayout
        android:id="@+id/item_perfect_relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingTop="@dimen/_8sdp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_perfect_imgProfile"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp" />
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_perfect_imgProfile">

            <TextView
                android:id="@+id/item_perfect_tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/greenToolbar"
                android:textSize="@dimen/_16sdp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/item_perfect_tvCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_11ssp"
                android:layout_marginLeft="@dimen/_5sdp" />

        </LinearLayout>


        <TextView
            android:id="@+id/item_perfect_tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_perfect_relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_perfect_relative1"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp">
        <ImageView
            android:id="@+id/item_perfect_image"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_perfect_relative3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_perfect_relative2"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_perfect_post"
            android:padding="@dimen/_4sdp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/item_perfect_relative4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_perfect_relative3"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp"
        android:paddingBottom="@dimen/_15sdp">

        <LinearLayout
            android:id="@+id/item_perfect_layoutLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_marginRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="0dp"
            >
            <ImageView
                android:id="@+id/item_perfect_imageButtonLove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_favorite_border_black_24dp"
                />
            <TextView
                android:id="@+id/item_perfect_tvLoveNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="0dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_perfect_layoutComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_perfect_layoutLove"
            android:background="@drawable/button"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="0dp">
            <ImageView
                android:id="@+id/item_perfect_imageButtonComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chat_bubble_outline_black_24dp" />
            <TextView
                android:id="@+id/item_perfect_tvCommentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="0dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_perfect_layoutMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:paddingTop="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:paddingLeft="@dimen/_10sdp">
            <ImageView
                android:id="@+id/item_perfect_imageButtonMore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_more_horiz_black_24dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>