<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greenBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:id="@+id/grid_relativeLayout2"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/grid_locationImageOnline"
            android:contentDescription="@string/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_location_on_white_24dp" />

        <TextView
            android:id="@+id/frag_gridview_nearTxtOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/near"
            android:layout_gravity="center_horizontal|top"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/grid_locationImageOnline"
            android:layout_toEndOf="@+id/grid_locationImageOnline" />

        <TextView
            android:id="@+id/frag_gridview_cityOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/frag_gridview_nearTxtOnline"
            android:layout_toEndOf="@+id/frag_gridview_nearTxtOnline"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/grid_viewOnline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="110dp"
        android:gravity="center"
        android:numColumns="auto_fit" />
</LinearLayout>