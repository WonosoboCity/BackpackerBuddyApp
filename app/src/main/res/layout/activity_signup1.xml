<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/linearLayoutSignUp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">

        <include android:id="@+id/toolbar_main"
            layout="@layout/frag_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/_40sdp"
                android:paddingRight="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/lowWhite">

                <RelativeLayout
                    android:id="@+id/activity_signup1_layoutProfilePic"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@color/greenBackground"
                    android:layout_marginTop="@dimen/_35sdp">

                    <ImageView
                        android:id="@+id/activity_signup1_imgProfileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_13ssp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/activity_signup1_tvProfilePic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/activity_signup1_imgProfileImage"
                        android:layout_alignTop="@+id/activity_signup1_imgProfileImage"
                        android:layout_alignRight="@+id/activity_signup1_imgProfileImage"
                        android:layout_alignBottom="@+id/activity_signup1_imgProfileImage"
                        android:layout_margin="1dp"
                        android:textSize="@dimen/_13ssp"
                        android:gravity="center"
                        android:text="Profile\nImage"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="@string/email"
                    android:maxLines="1"
                    android:textSize="@dimen/_13ssp"
                    android:background="@color/greenBackground"
                    android:textColor="@android:color/white"
                    android:padding="@dimen/_8sdp"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:hint="@string/username"
                    android:textSize="@dimen/_13ssp"
                    android:background="@color/greenBackground"
                    android:textColor="@android:color/white"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColorHint="@color/white"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:maxLines="1"
                    android:textSize="@dimen/_13ssp"
                    android:hint="@string/password"
                    android:background="@color/greenBackground"
                    android:textColor="@android:color/white"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColorHint="@color/white" />
                <EditText
                    android:id="@+id/etConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:maxLines="1"
                    android:textSize="@dimen/_13ssp"
                    android:hint="@string/confirmPassword"
                    android:background="@color/greenBackground"
                    android:textColor="@android:color/white"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColorHint="@color/white" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_signup1_tvSignUp"
                        android:text="Sign Up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13ssp"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:background="@color/greenBackground"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_gravity="right" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>