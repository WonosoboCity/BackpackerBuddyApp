<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_forgot_password_linearMain">

        <include
            layout="@layout/frag_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/_40sdp"
            android:paddingRight="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lowWhite"
            android:layout_gravity="center_vertical"
            android:id="@+id/activity_forgot_password_linearContent">

            <EditText
                android:id="@+id/activity_forgot_etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@color/greenBackground"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="@dimen/_10sdp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_13ssp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_forgot_password_bSend"
                    android:text="Send to Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_13ssp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:background="@color/greenBackground"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="right" />
            </FrameLayout>
        </LinearLayout>



    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>