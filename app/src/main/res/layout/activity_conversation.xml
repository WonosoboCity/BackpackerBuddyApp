<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/activity_conversation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenLighter">

        <include
            android:id="@+id/toolbar_main"
            layout="@layout/frag_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" >
        </include>

        <ImageView
            android:id="@+id/sendMessageButton"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignBottom="@+id/textMessage"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_8sdp"
            android:contentDescription="@string/txtFeedback"
            app:srcCompat="@android:drawable/ic_menu_send" />

        <EditText
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="0dp"
            android:layout_toLeftOf="@+id/sendMessageButton"
            android:ems="10"
            android:hint="@string/hntMessage"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="5"
            android:background="@android:color/transparent"
            android:paddingBottom="@dimen/_20sdp"
            android:paddingTop="@dimen/_20sdp"
            android:scrollbars="vertical"
            android:textSize="@dimen/_11ssp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/textMessage"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/white" />

        <ProgressBar
            android:id="@+id/activity_conversation_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:indeterminate="true"
            android:layout_centerInParent="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chat_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/line"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/toolbar_main">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>